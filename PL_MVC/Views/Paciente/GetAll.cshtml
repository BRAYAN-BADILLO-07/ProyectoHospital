@model ML.Paciente
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>paciente</h2>


<div class="row">
    <div class="col-md-12">
        <h5>Seleccione un paciente para editarlo o + para agregar...</h5>
        <hr />
    </div>

</div>

@*<div class="row">*@
<div style="float:right;">
    @Html.ActionLink("Agregar Paciente", "Form", "paciente", htmlAttributes: new { @class = "btn btn-success" })

</div>

<br>

<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td>Editar</td>
            <td class="hidden">IdPaciente</td>
            <td>Nombre</td>
            <td>FechaDeNacimiento</td>
            <td>FechaDeIngreso</td>
            <td>Sexo</td>
            <td>Sintomas</td>
            <td class="hidden">IdTipoSangre</td>
           
            <td>Eliminar</td>
        </tr>
    </thead>
    <tbody>
        @foreach (ML.Paciente paciente in Model.Pacientes)
        {
            <tr>
                <td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Paciente", new { Idpaciente = paciente.IdPaciente })"></a></td>
                <td class="hidden">@paciente.IdPaciente</td>
                <td>@paciente.Nombre @paciente.ApellidoPaterno @paciente.ApellidoMaterno </td>
                <td>@paciente.FechaDeNacimiento</td>
                <td>@paciente.FechaDeIngreso</td>
                <td>@paciente.Sexo</td>
                <td>@paciente.Sintomas</td>
                <td class="hidden">@paciente.TipoSangre.IdTipoSangre</td>
             
                <td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "paciente", new { Idpaciente= paciente.IdPaciente})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
            </tr>
        }

    </tbody>
</table>

